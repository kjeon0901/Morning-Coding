<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    style="@style/LockTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LockScreenActivity">

    <TextView
        android:id="@+id/Time"
        android:layout_width="148dp"
        android:layout_height="77dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40sp"
        android:textColor="#000000"
        android:textSize="55dp" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="129dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/lock_star_off_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="22dp"
            android:adjustViewBounds="true"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/star_off" />

        <TextView
            android:id="@+id/lock_problem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="26dp"
            android:text="Java  01번"
            android:textColor="#000000"
            android:textSize="25dp" />

        <FrameLayout
            android:id="@+id/lock_whole_frame"
            android:layout_width="343dp"
            android:layout_height="434dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="17dp">

            <View
                android:id="@+id/lock_horizon1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="#000000" />

            <View
                android:id="@+id/lock_horizon2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="48dp"
                android:background="#000000" />

            <View
                android:id="@+id/lock_vertical1"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#000000" />

            <View
                android:id="@+id/lock_vertical2"
                android:layout_width="3dp"
                android:layout_height="494dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:background="#000000" />

            <View
                android:id="@+id/lock_horizon3"
                android:layout_width="330dp"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="88dp"
                android:background="#000000" />

            <View
                android:id="@+id/lock_horizon4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom"
                android:background="#000000" />

            <FrameLayout
                android:id="@+id/lock_problem_frame"
                android:layout_width="343dp"
                android:layout_height="373dp"
                android:layout_marginTop="57dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/lock_problem_text"
                    android:layout_width="325dp"
                    android:layout_height="232dp"
                    android:layout_margin="10dp"
                    android:fastScrollEnabled="true"
                    android:fontFamily="@font/fontstyle_2"
                    android:scrollbars="vertical"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </FrameLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/fontstyle_2">

                <RadioButton
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="RadioButton"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="RadioButton"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton"
                    android:textSize="15dp" />
            </RadioGroup>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="470dp">

            <Button
                android:id="@+id/answer"
                android:layout_width="92dp"
                android:layout_height="38dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/buttonstyle"
                android:fontFamily="@font/fontstyle_2"
                android:text="정답확인" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="520dp">

            <TextView
                android:id="@+id/unlocking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:fontFamily="@font/fontstyle_2"
                android:text="\u003C\u003C 밀어서 잠금해제"
                android:textSize="20dp" />
        </FrameLayout>

    </FrameLayout>

</LinearLayout>