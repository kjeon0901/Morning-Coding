<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LockScreenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Time"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/Date"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/lock_star_off_btn"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:background="#ffffff"
            app:srcCompat="@drawable/star_off" />

        <TextView
            android:id="@+id/lock_problem_name"
            android:textSize="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java 01ë²ˆ" />

        <FrameLayout
            android:id="@+id/lock_whole_frame"
            android:layout_width="359dp"
            android:layout_height="500dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp">

            <View
                android:id="@+id/lock_horizon1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="#000000" />

            <View
                android:id="@+id/lock_horizon2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:background="#000000" />

            <View
                android:id="@+id/lock_vertical1"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#000000" />

            <View
                android:id="@+id/lock_vertical2"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:background="#000000" />

            <View
                android:id="@+id/lock_horizon3"
                android:layout_width="330dp"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:background="#000000" />

            <View
                android:id="@+id/lock_horizon4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom"
                android:background="#000000" />

            <FrameLayout
                android:id="@+id/lock_problem_frame"
                android:layout_width="match_parent"
                android:layout_height="407dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/lock_problem_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/fontstyle_2"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/home_radiobutton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="RadioButton" />

                    <RadioButton
                        android:id="@+id/home_radiobutton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="RadioButton" />

                    <RadioButton
                        android:id="@+id/home_radiobutton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="RadioButton" />
                </RadioGroup>

            </FrameLayout>
        </FrameLayout>
    </FrameLayout>

</LinearLayout>